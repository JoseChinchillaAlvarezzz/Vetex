@{
    ViewData["Title"] = "Registro de dueño";
    Layout = "_Layout"; // Quita esta línea si no usas layout
}

<style>
    body {
        background-color: #3d90b7;
    }

    .frame {
        background: #dedede;
        border-radius: 20px;
        padding: 32px 28px 48px;
        margin: 32px auto;
        max-width: 980px;
        position: relative;
    }

    .page-title {
        color: #3d90b7;
        font-weight: 700;
        font-size: 2.6rem;
        text-align: center;
        margin-bottom: 18px;
    }

    .section-title {
        font-weight: 700;
        font-size: 1.6rem;
        margin: 10px 0 18px;
    }

    .logo {
        position: absolute;
        top: 16px;
        right: 24px;
        width: 72px;
        height: auto;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        background: #fff;
    }

    .btn-save {
        display: inline-block;
        margin-top: 6px;
        padding: 12px 36px;
        font-size: 1.25rem;
        font-weight: 700;
        border-radius: 12px;
    }
</style>

<!-- Si tu _Layout no trae Bootstrap, descomenta:
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
-->

<div class="container frame">
    <!-- Logo (cambia la ruta a tu archivo) -->
    <img src="~/img/logo.png" alt="Vetex" class="logo" />

    <h1 class="page-title">Registro de dueño</h1>

    <h2 class="section-title">Registrar Dueño</h2>

    @* Cuando conectes el modelo, puedes usar:
     @model DuenoVM
     <form asp-action="Create" method="post">
     y cambiar inputs por <input asp-for="Nombre" ... />
  *@
    <form action="#" method="post" novalidate>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label" for="Nombre">Nombre:</label>
                <input class="form-control" id="Nombre" name="Nombre" type="text" placeholder="Juan Perez" />
            </div>

            <div class="col-12">
                <label class="form-label" for="Telefono">Teléfono:</label>
                <input class="form-control" id="Telefono" name="Telefono" type="text" placeholder="2334-8878" />
            </div>

            <div class="col-12">
                <label class="form-label" for="Dui">DUI:</label>
                <input class="form-control" id="Dui" name="Dui" type="text" placeholder="06668409-3" />
            </div>

            <div class="col-12">
                <label class="form-label" for="Correo">Correo electrónico:</label>
                <input class="form-control" id="Correo" name="Correo" type="email" placeholder="juanito.perez26@gmail.com" />
            </div>

            <div class="col-12">
                <label class="form-label" for="Direccion">Dirección:</label>
                <input class="form-control" id="Direccion" name="Direccion" type="text" placeholder="1Av Norte Entre 8 y 10 Calle Oriente" />
            </div>

            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary btn-save">Guardar</button>
            </div>
        </div>
    </form>
</div>
