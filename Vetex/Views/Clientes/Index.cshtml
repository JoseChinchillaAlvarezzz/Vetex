@{
    Layout = null; // sin layout
    ViewData["Title"] = "Gestión de clientes";
}

@{
    var clientesMock = new[]
    {
        new {
            Nombre = "María López",
            Telefono = "1234-5678",
            Mascotas = new[] { new { Nombre="Toby", Emoji="🐶" }, new { Nombre="Mimi", Emoji="🐱" } }
        },
        new {
            Nombre = "María López",
            Telefono = "1234-5678",
            Mascotas = new[] { new { Nombre="Toby", Emoji="🐶" }, new { Nombre="Mimi", Emoji="🐱" } }
        }
    };
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #3d90b7;
        }

        .wrap {
            background: #e0e0e0;
            border-radius: 20px;
            padding: 30px;
            margin: 30px auto;
            max-width: 1100px;
            position: relative;
        }

        .titulo {
            color: #3d90b7;
            font-weight: 700;
            text-align: center;
            margin-bottom: 18px;
            font-size: 2.4rem;
        }

        .btn-nuevo {
            background-color: #3d90b7;
            border: none;
            padding: .7rem 1.2rem;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
        }

            .btn-nuevo:hover {
                background-color: #327596;
            }

        .logo {
            position: absolute;
            top: 16px;
            right: 24px;
            width: 70px;
            height: auto;
        }

        .table thead th {
            background: #f8f9fa;
            color: #495057;
            font-weight: 700;
        }

        .pets-list {
            margin: 0;
            padding-left: 1.2rem;
        }

            .pets-list li {
                list-style-type: disc;
                margin-bottom: .2rem;
            }
    </style>
</head>
<body>
    <div class="container wrap">
        <!-- Logo -->
        <img src="~/img/logo.png" alt="Logo" class="logo" />

        <!-- Título -->
        <h2 class="titulo">Gestión de clientes</h2>

        <!-- Botón nuevo dueño -->
        <div class="text-center mb-3">
            <a href="#" class="btn btn-nuevo">+ Nuevo dueño</a>
        </div>

        <!-- Buscador -->
        <input class="form-control mb-3" type="text" placeholder="Buscar dueño..." />

        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Mascotas</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in clientesMock)
                    {
                        <tr>
                            <td>@c.Nombre</td>
                            <td>@c.Telefono</td>
                            <td>
                                <ul class="pets-list">
                                    @foreach (var m in c.Mascotas)
                                    {
                                        <li>@m.Nombre @m.Emoji</li>
                                    }
                                </ul>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-primary btn-sm me-1">Editar</button>
                                <button class="btn btn-danger btn-sm">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
