@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Nuevo Registro</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #2b90b6;
        }

        .wrap {
            max-width: 1000px;
            background: #cfcfcf;
            margin: 24px auto;
            border-radius: 14px;
            padding: 20px
        }

        .section-title {
            font-weight: 700;
            margin: 10px 0
        }

        .btn-vetex {
            background: #5aa9e6;
            border: none
        }

        .help {
            font-size: .9rem;
            color: #666
        }

        .pill {
            background: #eef6ff;
            border-radius: 10px;
            padding: .35rem .6rem
        }

        .line {
            height: 1px;
            background: #d7d7d7;
            margin: 12px 0
        }
    </style>
</head>
<body>
    <div class="wrap">
        <h5 class="fw-semibold mb-3">Nuevo Registro</h5>

        <!-- Aquí están los campos para nombre del dueño y mascota -->
        <div class="mb-2">
            <label class="form-label fw-semibold">Nombre del dueño:</label>
            <input class="form-control" placeholder="Escriba el nombre del dueño" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Nombre de la mascota:</label>
            <input class="form-control" placeholder="Escriba el nombre de la mascota" />
        </div>

        <!-- FORMULARIO ESTÁTICO -->
        <form method="post">
            <!-- FICHA CLÍNICA -->
            <div class="section-title">Ficha clínica</div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Reseña:</label>
                <textarea class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Motivo:</label>
                <textarea class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Examen físico:</label>
                <textarea class="form-control" rows="5"
                          placeholder="Temperatura, pulso, respiración, mucosas, hidratación, zona afectada..."></textarea>
                <div class="help mt-1">Incluye signos vitales y hallazgos relevantes.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Diagnóstico:</label>
                <input class="form-control" />
            </div>

            <div class="line"></div>

            <!-- PLAN -->
            <div class="section-title">Plan</div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Evaluación general:</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Tratamiento:</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Indicación:</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <!-- Medicación -->
            <div class="mb-2">
                <label class="form-label fw-semibold">Medicación:</label>
                <div id="medList" class="d-flex flex-column gap-2 mb-2"></div>
                <button type="button" class="btn btn-sm btn-vetex" data-bs-toggle="modal" data-bs-target="#medModal">Agregar medicamento</button>
            </div>

            <div class="text-center mt-4">
                <button class="btn btn-vetex px-4">Finalizar Registro</button>
            </div>
        </form>
    </div>

    <!-- Modal: Selección de medicamentos -->
    <div class="modal fade" id="medModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius:14px">
                <div class="modal-header">
                    <h6 class="modal-title fw-semibold">Selección de medicamentos</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Buscar medicamento:</label>
                        <div class="input-group">
                            <input id="medName" class="form-control" />
                            <span class="input-group-text">🔎</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Días de tratamiento:</label>
                        <input id="medDays" type="number" min="1" class="form-control" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Dosis (horas entre dosis):</label>
                        <select id="medDose" class="form-select">
                            <option>8</option>
                            <option>12</option>
                            <option>24</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnAddMed" type="button" class="btn btn-primary" style="background:#5aa9e6;border:none">Agregar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JS para simular agregar medicamentos
        (function () {
            let medIndex = 0;
            document.getElementById('btnAddMed').addEventListener('click', function () {
                const name = (document.getElementById('medName').value || '').trim();
                const days = (document.getElementById('medDays').value || '5').trim();
                const dose = (document.getElementById('medDose').value || '8').trim();
                if (!name) return;

                const pill = document.createElement('div');
                pill.className = 'pill d-flex justify-content-between align-items-center gap-2';
                pill.innerHTML = `<span>${name} , c/${dose} h × ${days} días</span>
                                  <button type="button" class="btn btn-sm btn-link text-danger p-0">Quitar</button>`;
                document.getElementById('medList').appendChild(pill);

                pill.querySelector('button').addEventListener('click', () => pill.remove());

                medIndex++;
                bootstrap.Modal.getInstance(document.getElementById('medModal')).hide();
                document.getElementById('medName').value = '';
                document.getElementById('medDays').value = '';
                document.getElementById('medDose').value = '8';
            });
        })();
    </script>
</body>
</html>
