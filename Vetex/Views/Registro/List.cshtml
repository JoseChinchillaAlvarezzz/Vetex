            <div class="col-md-2 text-end">
                <a class="btn btn-ver btn-sm" href="#">Ver</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
