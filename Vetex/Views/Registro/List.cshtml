@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registro Clínico</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #2b90b6;
        }

        .panel {
            max-width: 1100px;
            background: #e3e3e3;
            margin: 24px auto;
            border-radius: 14px;
            padding: 18px 18px 8px
        }

        .row-item {
            background: #f5f5f5;
            border-radius: 10px;
            padding: .6rem 1rem
        }

        .btn-ver {
            background: #5aa9e6;
            border: none;
            padding: .25rem .9rem
        }

        .hdr {
            font-weight: 700
        }

        .small-lbl {
            font-size: .9rem;
            color: #555
        }

        .search-icon {
            position: absolute;
            right: .6rem;
            top: .45rem;
            opacity: .6
        }
    </style>
</head>
<body>
    <div class="panel">
        <h5 class="fw-semibold mb-3">Registro Clínico</h5>

        <!-- Formulario de búsqueda estático -->
        <form method="get" class="row g-3 mb-3">
            <div class="col-md-6 position-relative">
                <label class="small-lbl">Dueño:</label>
                <input name="OwnerName" class="form-control form-control-sm" placeholder="Ej: Maria Lopez">
                <span class="search-icon">🔎</span>
            </div>
            <div class="col-md-6 position-relative">
                <label class="small-lbl">Mascota:</label>
                <input name="PetName" class="form-control form-control-sm" placeholder="Ej: Toby">
                <span class="search-icon">🔎</span>
            </div>
            <div class="col-12 text-end">
                <button class="btn btn-sm btn-secondary">Buscar</button>
            </div>
        </form>

        <!-- Cabecera de tabla -->
        <div class="row fw-semibold px-2 mb-2">
            <div class="col-md-4">Dueño:</div>
            <div class="col-md-4">Email:</div>
            <div class="col-md-2">Mascota:</div>
            <div class="col-md-2 text-end"></div>
        </div>

        <!-- Datos de ejemplo estáticos -->
        <div class="row align-items-center row-item mb-2">
            <div class="col-md-4">Maria Lopez</div>
            <div class="col-md-4"><a href="mailto:maria.lopez@gmail.com">maria.lopez@gmail.com</a></div>
            <div class="col-md-2">Toby</div>
            <div class="col-md-2 text-end">
                <a class="btn btn-ver btn-sm" href="#">Ver</a>
            </div>
        </div>

        <div class="row align-items-center row-item mb-2">
