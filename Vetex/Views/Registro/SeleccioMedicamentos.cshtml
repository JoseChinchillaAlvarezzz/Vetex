@* Partial view *@
<div class="modal fade" id="medModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:14px">
            <div class="modal-header">
                <h6 class="modal-title fw-semibold">Selección de medicamentos</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Buscar medicamento:</label>
                    <div class="input-group">
                        <input id="medName" class="form-control" />
                        <span class="input-group-text">🔎</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Días de tratamiento:</label>
                    <input id="medDays" type="number" min="1" class="form-control" />
                </div>
                <div class="mb-1">
                    <label class="form-label">Dosis:</label>
                    <select id="medDose" class="form-select">
                        <option>8</option>
                        <option>12</option>
                        <option>24</option>
                    </select>
                    <div class="form-text">Horas entre dosis</div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="addMedication()" type="button" class="btn btn-primary" style="background:#5aa9e6;border:none">Agregar</button>
            </div>
        </div>
    </div>
</div>
