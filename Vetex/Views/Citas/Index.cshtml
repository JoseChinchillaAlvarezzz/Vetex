<style>
  
    body {
        background: #ffffff;
    }

    
    .frame {
        max-width: 980px; 
        margin: 40px auto;
        background: #2b90b6; 
        padding: 18px; 
        border-radius: 16px;
    }

    .panel {
        position: relative;
        background: #e0e0e0; 
        border-radius: 12px;
        padding: 22px;
    }

    
    .header {
        display: flex;
        align-items: center;
        gap: 18px;
        margin-bottom: 12px;
    }

        .header .title {
            font-weight: 800;
            font-size: 28px;
            color: #1a1a1a;
            margin: 0;
        }

        .header .date {
            font-weight: 600;
            color: #2a2a2a;
        }

        .header .spacer {
            flex: 1;
        }
    
    .btn-new {
        background: #2b9ed9;
        color: #fff;
        font-weight: 700;
        border: none;
        padding: 10px 18px;
        border-radius: 10px;
        cursor: pointer;
        transition: filter .15s;
    }

        .btn-new:hover {
            filter: brightness(.95);
        }

   
    .logo {
        position: absolute;
        right: 16px;
        top: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .logo img {
            height: 38px;
            width: auto;
        }

        .logo small {
            font-weight: 700;
            color: #286a84;
        }
  
    .table-wrap {
        margin-top: 10px;
        background: #eee;
        border-radius: 8px;
        padding: 12px;
    }

    table.citas {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #f5f5f5;
        border: 1px solid #cfcfcf;
    }

    .citas thead th {
        background: #f6f6f6;
        font-weight: 800;
        color: #333;
        padding: 10px 12px;
        border-bottom: 1px solid #cfcfcf;
    }

    .citas tbody td {
        padding: 10px 12px;
        border-top: 1px solid #d7d7d7;
        border-left: 1px solid #e3e3e3;
    }

    .citas tbody tr:first-child td {
        border-top: 1px solid #cfcfcf;
    }

    .citas tbody td:first-child {
        border-left: none;
    }

    .citas tbody tr:nth-child(odd) td {
        background: #fafafa;
    }

    .citas tbody tr:nth-child(even) td {
        background: #f0f0f0;
    }

    
    .code-link {
        color: #2b9ed9;
        font-weight: 700;
        text-decoration: none;
    }

        .code-link:hover {
            text-decoration: underline;
        }

    @media (max-width: 1024px) {
        .frame

    {
        margin: 20px 12px;
    }

    .logo {
        right: 12px;
        top: 8px;
    }

    }


    

