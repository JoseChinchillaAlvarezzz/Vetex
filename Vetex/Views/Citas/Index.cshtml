    }
</style>

<div class="frame">
    <div class="panel">

        <!-- Logo dentro del panel -->
        <div class="logo">
            <img src="~/images/logo-vetex.png" alt="Vetex" />
            <small>Vetex</small>
        </div>

        <!-- Encabezado -->
        <div class="header">
            <h2 class="title">Citas del día</h2>
            <span class="date">@fecha.ToString("dd/MM/yyyy")</span>
            <div class="spacer"></div>
            <a asp-controller="Citas" asp-action="Crear_cita" class="btn btn-new">Nueva cita</a>
        </div>

        <!-- Tabla -->
        <div class="table-wrap">
            <table class="citas">
                <thead>
                    <tr>
                        <th style="width:18%;">Citas agendadas</th>
                        <th style="width:20%;">Tipo de cita</th>
                        <th style="width:22%;">Dueño</th>
                        <th style="width:20%;">Mascota</th>
                        <th style="width:20%;">Hora</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in citasDemo)
                    {
                        <tr>
                            <td><a href="#" class="code-link">#@c.Codigo</a></td>
                            <td>@c.TipoCita</td>
                            <td>@c.Dueno</td>
                            <td>@c.Mascota</td>
                            <td>@c.Hora</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
