@{
    Layout = null;
    var nombre = ViewBag.UsuarioNombre as string ?? "Usuario";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Bienvenido - Vetex</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background: #2b9ed9; 
        }

        .contenedor {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh; 
        }

        .panel {
            background: #dcdcdc;
            border: 14px solid #2b9ed9;
            border-radius: 16px;
            width: 1600px; 
            height: 800px; 
            text-align: center;
            padding-top: 120px;
        }

            .panel h1 {
                font-size: 32px; 
                font-weight: bold;
                margin-bottom: 25px;
            }

            .panel img {
                width: 180px; 
                margin-bottom: 15px;
            }

        .brand {
            font-size: 40px;
            font-weight: bold;
            color: #15324a;
        }
    </style>
</head>
<body>

    <div class="contenedor">
        <div class="panel">
            <h1>Bienvenido @nombre</h1>
            <img src="~/images/Vetex-removebg-preview.png" alt="Logo Vetex" />
            <div class="brand">Vetex</div>
        </div>
    </div>

</body>
</html>
